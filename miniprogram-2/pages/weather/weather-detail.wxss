.xin-list .single {
  transition: all 1s;
  overflow: hidden;
  border-radius: 1px;
  margin-top: 15px;
  width: calc(100% - 50px);
  height: calc(100vh - 80px - 11vh);
  position: absolute;
  box-shadow: 3px 3px 10px 0px rgba(119, 119, 119, 0.753);
  z-index:999;
    
}

